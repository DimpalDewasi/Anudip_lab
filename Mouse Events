//mouseevents.js
import React, { useState } from "react";

function MouseEventsTracker() {
  const [eventInfo, setEventInfo] = useState("Interact with the box!");

  const handleMouseEvent = (eventName) => {
    const time = new Date().toLocaleTimeString();
    setEventInfo(`${eventName} detected at ${time}`);
  };

  const boxStyle = {
    width: "300px",
    height: "150px",
    margin: "30px auto",
    borderRadius: "12px",
    backgroundColor: "#4A90E2",
    color: "white",
    fontWeight: "600",
    display: "flex",
    justifyContent: "center",
    alignItems: "center",
    cursor: "pointer",
    userSelect: "none",
    textAlign: "center",
    padding: "20px",
    fontSize: "18px"
  };

  return (
    <div
      style={boxStyle}
      onClick={() => handleMouseEvent("Click")}
      onDoubleClick={() => handleMouseEvent("Double Click")}
      onMouseEnter={() => handleMouseEvent("Mouse Enter")}
      onMouseLeave={() => handleMouseEvent("Mouse Leave")}
      onMouseDown={() => handleMouseEvent("Mouse Down")}
      onMouseUp={() => handleMouseEvent("Mouse Up")}
      onMouseMove={() => handleMouseEvent("Mouse Move")}
    >
      {eventInfo}
    </div>
  );
}

export default MouseEventsTracker;

//App.js
import React from "react";
import MouseEventsTracker from "./mouseevents";

function App() {
  return (
    <div>
      <h1>Mouse Events Demo</h1>
      <MouseEventsTracker />
    </div>
  );
}

export default App;

